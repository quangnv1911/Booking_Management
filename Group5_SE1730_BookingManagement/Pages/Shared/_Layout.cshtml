@using Group5_SE1730_BookingManagement.Services
@inject ISiteSettingsService SiteSettingsService

@{
    var siteSettings = await SiteSettingsService.GetSiteSettingsAsync();
    var appName = siteSettings?.AppName ?? "DefaultAppName";
    var faviconUrl = siteSettings?.FaviconUrl;
    var logoUrl = siteSettings?.LogoUrl;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @appName</title>
    <link rel="icon" href="@faviconUrl" type="image/x-icon" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Group5_SE1730_BookingManagement.styles.css" asp-append-version="true" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="~/css/layout.css" rel="stylesheet" type="text/css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="@logoUrl" />
                </a>
                @await Html.PartialAsync("_LoginPartial")
            </div>
        </nav>
    </header>
    <div class="container layout-body-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top layout-footer-container">
        <div class="container">
            <span class="text-muted layout-footer-address">Khu Giáo dục và Đào tạo – Khu Công nghệ cao Hòa Lạc – Km29 Đại lộ Thăng Long, Thạch Thất, TP. HN</span>
            <br/>
            <span class="layout-footer-copyright">
                Copyright &copy; 2024 Group 5. All rights reserved - <a class="text-white text-decoration-none" asp-area="" asp-page="/Privacy">Privacy</a>
            </span>

        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>