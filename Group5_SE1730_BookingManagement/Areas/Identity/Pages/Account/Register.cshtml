@page "/register/"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<link rel="stylesheet" href="~/css/Areas/register.css" asp-append-version="true" />
<link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">

<section class="bg-light p-3 p-md-4 p-xl-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-xxl-11">
                <div class="card border-light-subtle shadow-sm">
                    <div class="row g-0">
                        <div class="col-12 col-md-6">
                            <img class="img-fluid rounded-start w-100 h-100 object-fit-cover"
                                 loading="lazy"
                                 src="https://preview.colorlib.com/theme/bootstrap/login-form-06/images/bg_1.jpg.webp"
                                 alt="Welcome back you've been missed!" />
                        </div>
                        <div class="col-12 col-md-6 d-flex align-items-center justify-content-center">
                            <div class="col-12 col-lg-11 col-xl-10">
                                <div class="card-body p-3 p-md-4 p-xl-5">
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="mb-5">
                                                <div class="text-center mb-4">
                                                    <a href="#!">
                                                        <img src="https://d1785e74lyxkqq.cloudfront.net/_next/static/v2/9/97f3e7a54e9c6987283b78e016664776.svg"
                                                             alt="BootstrapBrain Logo"
                                                             width="175"
                                                             height="57" />
                                                    </a>
                                                </div>
                                                <h2 class="h4 text-center">Registration</h2>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-12">
                                            <div class="d-flex gap-3 flex-column">
                                                <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                                        <button type="submit" class="btn btn-lg btn-outline-dark btn-width" name="provider" value="@Model.ExternalLogins![0].Name" title="Log in using your @Model.ExternalLogins![0].DisplayName account">

                                                            <svg xmlns="http://www.w3.org/2000/svg"
                                                                 width="16"
                                                                 height="16"
                                                                 fill="currentColor"
                                                                 class="bi bi-google"
                                                                 viewBox="0 0 16 16">
                                                                <path d="M15.545 6.558a9.42 9.42 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.689 7.689 0 0 1 5.352 2.082l-2.284 2.284A4.347 4.347 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.792 4.792 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.702 3.702 0 0 0 1.599-2.431H8v-3.08h7.545z" />
                                                            </svg>
                                                            <span class="ms-2 fs-6">Log in with Google</span>
                                                        </button>
                                                </form>
                                            </div>
                                            <p class="text-center mt-4 mb-5">
                                                Or enter your details to register
                                            </p>
                                        </div>
                                    </div>
                                    <form id="registerForm"
                                          asp-route-returnUrl="@Model.ReturnUrl"
                                          method="post">
                                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                        <div class="row gy-3 overflow-hidden">
                                            <div class="row col-12">
                                                <div class="col-6">
                                                    <div class="form-floating mb-3">
                                                        <input asp-for="Input.FirstName" aria-required="true"
                                                               type="text"
                                                               class="form-control"
                                                               value=""
                                                               id="firstName"
                                                               placeholder="First Name"
                                                               required />
                                                        <label for="Input.FirstName" class="form-label">First Name</label>
                                                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>

                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <div class="form-floating mb-3">
                                                        <input asp-for="Input.LastName"
                                                               type="text"
                                                               value=""
                                                               class="form-control"
                                                               id="lastName"
                                                               placeholder="Last Name"
                                                               required />
                                                        <label for="Input.LastName" class="form-label">Last Name</label>
                                                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="Input.Email"
                                                           autocomplete="username" aria-required="true"
                                                           type="email"
                                                           class="form-control"
                                                           id="email"
                                                           placeholder="name@example.com"
                                                           required
                                                           value="" />
                                                    <label for="Input.Email" class="form-label">Email</label>
                                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="Input.Password"
                                                           autocomplete="new-password" aria-required="true"
                                                           type="password"
                                                           class="form-control"
                                                           value=""
                                                           placeholder="Password"
                                                           required />
                                                    <label for="Input.Password" class="form-label">Password</label>
                                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <div class="form-floating mb-3">
                                                    <input asp-for="Input.ConfirmPassword"
                                                           autocomplete="new-password" aria-required="true"
                                                           type="password"
                                                           class="form-control"
                                                           value=""
                                                           placeholder="ConfirmPassword"
                                                           required />
                                                    <label for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                                                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-check">
                                                    <input class="form-check-input"
                                                           type="checkbox"
                                                           value=""
                                                           name="iAgree"
                                                           id="iAgree"
                                                           required />
                                                    <label class="form-check-label text-secondary"
                                                           for="iAgree">
                                                        Bằng cách đăng ký, bạn đồng ý với
                                                        <a class="register-policy" asp-page="/Privacy">Điều khoản & Điều kiện</a>
                                                        của chúng tôi và bạn đã đọc
                                                        <a class="register-policy" asp-page="/Privacy">Chính Sách Quyền Riêng Tư</a>
                                                        của của chúng tôi.
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="d-grid">
                                                    <button id="registerSubmit" class="btn btn-dark btn-lg" type="submit">
                                                        Đăng ký
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                    <div class="row">
                                        <div class="col-12">
                                            <p class="mb-0 mt-5 text-secondary text-center">
                                                Already have an account?
                                                <a asp-page="./Login"  class="link-primary text-decoration-none">Sign in</a>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
